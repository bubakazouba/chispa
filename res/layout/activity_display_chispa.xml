<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.idkstartup.chipsa_android.DisplayChispa" >

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
			
            <Button
                android:id="@+id/viewJoinedbtn"
                android:layout_weight="1"
                android:layout_width="0dp" 
                
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="view joined friends: " />

            <ImageView
                android:id="@+id/ownerProfileimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:src="@drawable/abc_ab_share_pack_mtrl_alpha" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/deletebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:text="delete" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/viewInvitedbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="view invited friends: " />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/ownerNametxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </TableRow>

        <LinearLayout
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" 
            android:orientation="vertical" >
			
            <ScrollView
                android:id="@+id/scrollView1"
                android:fillViewport="true" 
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/usersListView"
                    android:fillViewport="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                     >
                </ListView>
            </ScrollView>

        </LinearLayout>

    </TableLayout>

</RelativeLayout>