<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.idkstartup.chipsa_android.DisplayChispa" >

    <Button
        android:id="@+id/viewInvitedbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="53dp"
        android:text="view invited friends: " />

    <Button
        android:id="@+id/viewJoinedbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/viewInvitedbtn"
        android:layout_below="@+id/viewInvitedbtn"
        android:layout_marginTop="17dp"
        android:text="view joined friends: " />

    <TextView
        android:id="@+id/ownerNametxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/viewInvitedbtn"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="22dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/ownerProfileimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="134dp"
        android:layout_toRightOf="@+id/viewInvitedbtn"
        android:src="@drawable/abc_ab_share_pack_mtrl_alpha" />

</RelativeLayout>
